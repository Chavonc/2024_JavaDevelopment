<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_bg"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">
    <EditText
        android:id="@+id/inputName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_bookmark"
        android:hint="在此輸入備註"
        android:minHeight="45dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/inputDate"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_calendar"
        android:hint="在此輸入日期"
        android:minHeight="45dp"
        android:textSize="18sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <EditText
        android:id="@+id/inputTime"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_access_time_filled"
        android:hint="在此輸入時間"
        android:minHeight="45dp"
        android:textSize="18sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <EditText
        android:id="@+id/inputMoney"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_money"
        android:hint="在此輸入花費"
        android:minHeight="45dp"
        android:textSize="18sp" />
</LinearLayout>