<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-109dp"
        tools:layout_editor_absoluteY="-247dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="記帳事項:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

        <EditText
            android:id="@+id/txtTitle"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            tools:ignore="Autofill,LabelFor,MissingConstraints,RtlHardcoded,TextFields" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_toStartOf="@+id/txtPrice"
            android:layout_toLeftOf="@+id/txtPrice"
            android:text="商品價格:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="更新價格:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

        <EditText
            android:id="@+id/txtPrice"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_alignStart="@+id/txtTitle"
            android:layout_alignLeft="@+id/txtTitle"
            android:ems="10"
            android:inputType="number"
            tools:ignore="Autofill,LabelFor,MissingConstraints,RtlHardcoded" />

        <EditText
            android:id="@+id/txtNewPrice"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrice"
            android:layout_alignStart="@+id/txtPrice"
            android:layout_alignLeft="@+id/txtPrice"
            android:ems="10"
            android:inputType="number"
            tools:ignore="Autofill,LabelFor,MissingConstraints,RtlHardcoded" />

        <TextView
            android:id="@+id/lblOutput2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNewPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="28dp"
            android:text="請在menu中選擇功能"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>